{% extends 'base.html.twig' %}

{% block title %}Hello DeleteCommentController!{% endblock %}

{% block body %}

<h1>Delete Comment</h1>

<!-- fonction dump() utilisé grace au bundle vardumper -->
<p>{{ dump(comment) }}</p>


<!-- Affichage de ma liste de Tricks -->
<ul>
    {% if comment %}
        <!-- Passer le titre en lien vers la page details du trick à terme -->
        <li>{{ comment.getContent|e }}</li>
    {% endif %}


    {% if app.user %}
        {{ form(delete_comment) }}
    {% endif %}
</ul>


{% endblock %}
