{% extends 'base.html.twig' %}

{% block title %}Hello DetailController!{% endblock %}

{% block body %}
    <style type="text/css">
    /*-----------------------------------------------------------------------------------*/

    /*  /* Global rules */

    /*-----------------------------------------------------------------------------------*/

    html {
        scroll-behavior: smooth;
    }

    body {
        padding: 0;
        margin: 0;
        font-family: 'Roboto', sans-serif;
    }

    .logo {
        max-height: 40px;
    }

    footer {
        background-color: #1a1a1a;
        color: white;
        padding-top: 40px;
        padding-bottom: 30px;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Home image */

    /*-----------------------------------------------------------------------------------*/

    .home-bg {
        background-image: url('/images/home.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: 50% 50%;
        width: 100%;
        height: 100vh;
    }

    .slogan {
        height: 100vh;
        text-align: left;
        width: 100%;
        display: flex;
        justify-content: center;
        flex-direction: column;
        text-transform: uppercase;
        color: black;
        font-weight: 600;
        font-size: 20px;
    }

    .slogan-p {
        align-self: flex-start;
        font-family: 'Shadows Into Light', cursive;
    }

    .chevron-down {
        position: absolute;
        right: 0.5%;
        bottom: 0%;
    }

    .cup {
        position: relative;
    }

    .chevron-up {
        position: absolute;
        right: 0.5%;
        bottom: 0%;
    }

    .tricks-anchor {
        /* Anchor and fixed navbar */
        display: block;
        height: 98.75px;
        margin-top: -98.75px;
        visibility: hidden;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Tricks cards */

    /*-----------------------------------------------------------------------------------*/

    .card {
        box-shadow: 0 2px 0 rgba(90, 97, 105, 0.11), 0 4px 8px rgba(90, 97, 105, 0.12), 0 10px 10px #5a61690f, 0 7px 70px rgba(90, 97, 105, 0.1);
        border-radius: 0.625rem;
    }

    .card-img-top {
        border-top-left-radius: 0.625rem;
        border-top-right-radius: 0.625rem;
    }

    .card-img-top.home {
        height: 12rem;
    }

    .trick-link {
        font-weight: 900;
        font-size: 0.765625rem;
        border-radius: 0.625rem;
    }

    .change-link {
        font-size: 0.60rem;
        color: #1F9BCF;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Trick */

    /*-----------------------------------------------------------------------------------*/

    .trick-data {
        font-size: 0.8rem;
    }

    .list-inline-item:not(:first-child) {
        margin-left: 0.5rem;
    }

    .no-medias {
        border: 2px solid grey;
    }

    .no-medias>p {
        color: grey;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Carousel */

    /*-----------------------------------------------------------------------------------*/

    div.carousel div.carousel-item>img {
        width: 100%;
        height: 18.75rem;
    }

    div.carousel div.carousel-item>iframe {
        width: 100%;
        height: 18.75rem;
        border: 0;
        display: block;
    }

    .carousel-indicators {
        bottom: -50px;
    }

    .carousel-indicators li {
        border-radius: 50%;
        width: 12px;
        height: 12px;
        background-color: #ccc;
    }

    .carousel-inner {
        margin-bottom: 50px;
        border-radius: 0.625rem;
        box-shadow: 0 2px 0 rgba(90, 97, 105, 0.11), 0 4px 8px rgba(90, 97, 105, 0.12), 0 10px 10px #5a61690f, 0 7px 70px rgba(90, 97, 105, 0.1);
    }

    .carousel-control-prev,
    .carousel-control-next {
        top: 55px;
        bottom: 55px;
    }

    ol {
        margin: 0;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Enlarge image on click */

    /*-----------------------------------------------------------------------------------*/

    .enlarge.clic-image {
        transform: scale(2, 2);
        z-index: 100;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Load more function */

    /*-----------------------------------------------------------------------------------*/

    div.trick {
        display: none;
    }

    #loadLessTrick {
        display: none;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Tricks comments */

    /*-----------------------------------------------------------------------------------*/

    body>div.container.mt-5>div>div>div.card.mt-5 {
        margin-bottom: 30px;
    }

    .comments {
        background: #fff;
        border-radius: 0.625rem;
        box-shadow: 0 2px 0 rgba(90, 97, 105, 0.11), 0 4px 8px rgba(90, 97, 105, 0.12), 0 10px 10px rgba(90, 97, 105, 0.06), 0 7px 70px rgba(90, 97, 105, 0.1);
    }

    .mb-30 {
        margin-bottom: 30px;
    }

    .padDiv {
        padding: 30px 35px;
    }

    .cmt {
        background: #fff;
        border-radius: 0.625rem;
        box-shadow: 0 2px 0 rgba(90, 97, 105, 0.11), 0 4px 8px rgba(90, 97, 105, 0.12), 0 10px 10px rgba(90, 97, 105, 0.06), 0 7px 70px rgba(90, 97, 105, 0.1);
    }

    body>div.container.mt-5>div>div>div.col-md-12.px-0>div>p {
        margin: 0;
    }

    #comment_content {
        height: 8rem;
    }

    h6 {
        font-weight: 500;
    }

    #comment-block>div {
        padding-bottom: 20px;
    }

    .entry-comments-item {
        margin-top: 40px;
        padding-bottom: 40px;
        border-bottom: 1px solid #f2f2f2;
    }

    .entry-comments-avatar {
        position: absolute;
        display: block;
        border-radius: 50%;
        width: 60px;
        height: 60px;
    }

    .entry-comments-body {
        padding-left: 86px;
    }

    .entry-comments-author {
        font-size: 16px;
        color: #292929;
        letter-spacing: 0.1em;
        font-weight: 600;
    }

    .comment-content {
        margin-top: 25px;
        margin-bottom: 0;
        padding: 0;
        font-size: 15px;
        color: #999999;
        line-height: 28px;
    }

    .comment-date {
        font-size: 13px;
    }

    .comments-anchor {
        display: block;
        height: 115px;
        height: 98.75px;
        margin-top: -98.75px;
    }

    .comment-anchor {
        display: block;
        height: 115px;
        height: 98.75px;
        margin-top: -98.75px;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Sign in page */

    /*-----------------------------------------------------------------------------------*/

    .login {
        margin-top: 11rem;
        margin-bottom: 3rem;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Registration page */

    /*-----------------------------------------------------------------------------------*/

    .registration {
        margin-top: 10rem;
        margin-bottom: 3rem;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Forgot password page */

    /*-----------------------------------------------------------------------------------*/

    .forgot {
        margin-top: 13rem;
        margin-bottom: 9rem;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Reset password page */

    /*-----------------------------------------------------------------------------------*/

    .reset {
        margin-top: 13rem;
        margin-bottom: 6rem;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* 404/403 page */

    /*-----------------------------------------------------------------------------------*/

    .exception {
        margin-top: 14rem;
        margin-bottom: 5rem;
    }

    .button-exception {
        min-width: 137px;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* Tricks update */

    /*-----------------------------------------------------------------------------------*/

    .update-trick {
        margin-top: 8rem;
    }

    #trick_content {
        height: 10rem;
    }

    #trick_category {
        height: 2.813rem;
    }

    body>div.container-fluid>div>div>div.main-content-container.container-fluid.px-4>div:nth-child(2)>div>div>ul>li>div>div>form>div:nth-child(3)>div {
        margin-bottom: 2.5rem;
    }

    .block-image>div.col-md-6>div {
        height: 45px;
    }

    #trick_images>fieldset {
        margin: 0;
    }

    #trick_videos>fieldset {
        margin: 0;
    }

    .custom-file-label::after {
        content: "Choisir un fichier";
    }

    .card>.list-group:last-child .list-group-item:last-child {
        border-bottom-right-radius: 0.625rem;
        border-bottom-left-radius: 0.625rem;
    }

    .custom-file-label {
        text-align: left;
    }

    .btn-trick {
        height: 45px;
        line-height: 1rem;
        font-size: 36px;
    }

    .btn.btn-secondary.btn-trick {
        padding-top: 10px;
        padding-left: 10.5px;
        padding-right: 10.5px;
        border: none;
    }

    .img-trick-principale {
        max-width: 100%;
        height: auto;
        margin-bottom: 2rem;
        border-radius: 0.625rem;
    }

    .img-trick {
        max-width: 100%;
        height: auto;
        margin-bottom: 2rem;
        margin-top: 1.5rem;
        border-radius: 0.625rem;
    }

    p.collection-head {
        font-weight: 600;
        margin-bottom: 1.3rem;
    }

    p.collection-head.first {
        margin-top: 1rem;
    }

    .delimiter {
        margin-top: 0;
        margin-bottom: 2rem;
    }

    .iframe-trick {
        width: 100%;
        min-height: 20rem;
        margin-bottom: 1rem;

        margin-top: 1.5rem;
        border: none;
    }

    .counter-image,
    .counter-video {
        font-size: 20px;
        font-weight: bolder;
        vertical-align: middle;
        margin-left: 1rem;
        padding: 0.7rem;
        color: black;
        border: 2px solid #d9534f;
        border-radius: 0.625rem;
    }

    /*-----------------------------------------------------------------------------------*/

    /*  /* User profile */

    /*-----------------------------------------------------------------------------------*/

    .profile-user {
        margin-top: 12rem;
    }

    .card-header {
        background-color: transparent;
    }

    .card-footer {
        background-color: transparent;
        padding: 1rem;
    }

    .card-footer.paging {
        padding-bottom: 0;
    }

    ul.pagination {
        margin: 0;
    }

    .blog-comments__item {
        padding: 0;
        border-top: 1px solid #e1e5eb;
    }

    .blog-comments__avatar img {
        width: 3.125rem;
        height: 3.125rem;
        border-radius: .25rem;
    }

    div.blog-comments__content>p {
        font-weight: 600;
    }

    .blog-comments__actions {
        font-size: 95%;
    }

    .blog-comments__actions .btn-group button {
        padding: .25rem .5625rem;
    }

    .btn.btn-white {
        text-transform: none;
        font-weight: 400;
    }

    .btn-group-sm>.btn {
        padding: .4286rem .875rem;
        font-size: .8rem;
        line-height: 1.5;
        border-radius: .25rem;
    }

    .btn.btn-white {
        border: 1px solid #e1e5eb;
        color: #3d5170;
    }

    i.material-icons.consult {
        font-size: inherit;
        position: relative;
        top: 2px;
    }

    .card-post__image {
        position: relative;
        min-height: 10.3125rem;
        border-top-left-radius: .625rem;
        border-top-right-radius: .625rem;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .row.trick-user {
        padding: 0;
    }

    .row.trick-user:first-child {
        padding-left: 15px;
    }

    .row.trick-user:last-child {
        padding-right: 15px;
    }

    .card-post--1 .card-post__author {
        -webkit-transform: translateY(50%);
        transform: translateY(50%);
        margin-left: 1.5625rem;
        position: absolute;
        bottom: 0;
    }

    .card-post__author-avatar {
        width: 2.8125rem;
        height: 2.8125rem;
        box-shadow: 0 0 0 0.125rem #fff, 0 0.1875rem 0.4375rem rgba(90, 97, 105, .5);
        display: block;
        background-position: center;
        background-size: cover;
        border-radius: 50%;
        text-indent: -9999px;
    }

    .card-body.profile {
        padding-top: 2.1875rem;
    }

    .bg-card {
        background-color: #f5f6f8;
    }


    /*-----------------------------------------------------------------------------------*/

    /*  /* Responsive max-width 768px */

    /*-----------------------------------------------------------------------------------*/

    @media (max-width: 768px) {

        /*----------------------------------------*/

        /*  /* Carousel */

        /*----------------------------------------*/

        div.carousel div.carousel-item>img {
            height: 15rem;
        }

        div.carousel div.carousel-item>iframe {
            height: 15rem;
        }

        /*----------------------------------------*/

        /*  /* Slogan */

        /*----------------------------------------*/

        .slogan-p {
            margin-bottom: 5rem;
        }

        /*----------------------------------------*/

        /*  /* Comment */

        /*----------------------------------------*/

        .entry-comments-avatar {
            position: relative;
            float: left;
            margin-right: 1rem;
        }

        .entry-comments-body {
            padding-left: 0;
        }

        .entry-comments-author {
            line-height: 3.7rem;
        }



        /*----------------------------------------*/

        /*  /* Profile Main Sidebar */

        /*----------------------------------------*/

        .main-sidebar {
            box-shadow: none;
            height: 3.75rem;
        }

        /*----------------------------------------*/

        /*  /* Profile Page Header */

        /*----------------------------------------*/

        body>div.container-fluid>div>div>div.main-content-container.container-fluid.px-4>div.page-header.row.py-4 {
            padding-top: 5rem !important;
        }

        /*----------------------------------------*/

        /*  /* Profile Comments */

        /*----------------------------------------*/

        /*----------------------------------------*/

        /*  /* Profile Copyright */

        /*----------------------------------------*/

        .copyright {
            margin-left: 5rem;
        }
    }
    </style>

    <!-- Detail du trick-->
    {% if trick %}
    
        <!-- Trick -->
        <div class="container mt-5">  
            <div class="row justify-content-center mt-5">          
                <div class="col-md-10 col-md-offset-1 mt-5 mb-4"> 
                                
                    <div class="card mt-5">
                        <!-- Image Trick-->
                        <img class="card-img-top" src="{{ asset('uploads/image_user/') }}{{ trick.image|e }}" alt="Card image cap">


                        <!-- Card Body -->
                        <div class="card-body">

                            <!-- Nom Trick / Date Trick / Groupe Trick -->
                            <ul class="list-inline trick-data">
                                <li class="list-inline-item">
                                    <h5 class="card-title">{{ trick.getTitle|e }}</h5>
                                </li> | 

                                <li class="list-inline-item">
                                    Ajouté le {{ trick.dateCreate|date("m/d/Y") }}
                                </li> |      

                                <li class="list-inline-item">
                                    Groupe: {{ trick.groupe|e }}
                                </li>
                            </ul>

                            <hr>
                        
                            <!--************** Image et Vidéo du Trick *************-->
                            <div class="row d-none d-lg-flex load-media">

                                <!-- Image du trick -->
                                <div class="col-lg-6 col-md-12 mb-4">
                                    <img class="card-img-top" src="{{ asset('uploads/image_user/') }}{{ trick.image|e }}" alt="Card image cap">
                                </div> 
                                
                                <!-- Video du trick -->
                                <div class="col-lg-6 col-md-12 mb-4">
                                    <iframe class="w-100 h-100" src="{{ trick.video|e }}"></iframe>
                                </div>                                             
                            </div>  


                            <!-- Bouton Masquer et Afficher les medias-->
                            <div class="text-center">
                                <a href="#" id="loadMedia" class="d-md-block d-lg-none">
                                    <button class="btn btn-outline-secondary">Afficher les médias</button>
                                </a>
                                <a href="#" id="hideMedia" class="d-none d-md-none d-lg-none">
                                    <button class="btn btn-outline-secondary mt-3">Masquer les médias</button>
                                </a>
                            </div>
                                            
                            <hr>

                            <!--************* Description du Trick ************-->
                            <h5 class="card-title">Description</h5>

                            <p class="card-text text-justify"> 
                                {{ trick.getDescription|e }}
                            </p>                                    
                        </div>
                    </div>


                    {% if app.user %}
                        <!-- Formulaire de creation de commentaire si user connecté OU lien pour s'incrire ou se connecté -->
                        <div class="col-md-12 px-0 mb-30">
                            <div class="comments text-center p-3">
                                <!-- Formulaire de creation de commentaire si user connecté -->
                                {{ form(comment_form, {'attr': {'class': 'd-flex'}}) }}  
                            </div>
                        </div>
                    {% endif %}




                    
                    <!--************* Partie Commentaire ***********-->
                    <span class="comments-anchor" id="comments-block"></span>

                    <div class="col-md-12 pl-0 pr-0">
                        <div class="comments text-left padDiv mb-30">
                            <div class="entry-comments">
                                <ul class="entry-comments-list list-unstyled">
                                    <span class="comment-anchor" id="10"></span>

                                    <!--**************** Affichage des commentaires ******************-->
                                    {% if comments %}
                                        {% for comment in comments %}
                                            <li>
                                                <div class="entry-comments-item">
                                                    <!-- Image du user -->
                                                    <img src="{{ asset('uploads/image_profil_user/') }}{{ comment.getUser.imagePath|e }}" class="entry-comments-avatar" alt="TestPseudo">

                                                    <!-- Infos du commentaire -->
                                                    <div class="entry-comments-body">

                                                        <span class="entry-comments-author">{{ comment.getUser.username|e }} {{ comment.getUser.firstname|e }}</span>

                                                        <span class="comment-date">
                                                            {{ comment.getDateCreate|date("m/d/Y") }}

                                                            <!-- Si User connecté + user admin -->
                                                            {% if app.user and app.user.roles[0] != "ROLE_USER"  %}
                                                                <a href="/delete/comment/{{comment.id}}" style="color:red;"><i class="fa-solid fa-trash-can"></i></a>
                                                                <input type="hidden" value={{comment.id}}/>
                                                            {% endif %}
                                                        </span>

                                                        <p class="comment-content text-justify">{{ comment.getContent|e }}</p>
                                                    </div>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!--************* Fin Partie Commentaire ***********-->  
                </div>     
            </div>           
        </div>
    {% endif %}

    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="{{ asset('js/detailjs.js') }}"></script>

{% endblock %}
